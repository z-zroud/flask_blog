{
    "version":1,
    "disable_existing_loggers":false,
    "formatters":{
        "simple":{
            "format": "%(asctime)s.%(msecs)03d - %(levelname)s - %(message)s",
            "datefmt":"%Y-%m-%d %H:%M:%S"
        },
        "verbose":{
            "format": "%(asctime)s.%(msecs)03d - %(levelname)s - [%(process)d]:%(threadName)s - [%(module)s:%(funcName)s]: %(message)s",
            "datefmt":"%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers":{
        "console":{
            "class":"logging.StreamHandler",
            "level":"DEBUG",
            "formatter":"verbose",
            "stream":"ext://sys.stdout"
        },
        "file_handler":{
            "class":"logging.handlers.TimedRotatingFileHandler",
            "level":"INFO",
            "formatter":"verbose",
            "filename":"blog.log",
            "when":"H",
            "interval":1,
            "backupCount":10,
            "encoding":"utf8"
        }
    },
    "root":{
        "level":"DEBUG",
        "handlers":["console", "file_handler"]
    }
}
